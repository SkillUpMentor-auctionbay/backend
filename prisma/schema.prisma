generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String    @id @default(cuid())
  password            String
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  email               String    @unique
  name                String
  profile_picture_url String?
  surname             String
  tokenVersion        Int       @default(0)
  auctionsCreated     Auction[]
  bids                Bid[]

  @@map("users")
}

model Auction {
  id            String   @id @default(cuid())
  title         String
  description   String
  imageUrl      String?
  startingPrice Decimal  @db.Decimal(10, 2)
  endTime       DateTime
  sellerId      String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  seller        User     @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  bids          Bid[]

  @@index([sellerId, endTime])
  @@index([endTime]) // For ordering by end date (freshest first)
  @@index([sellerId, createdAt]) // For ordering by creation date
  @@map("auctions")
}

model Bid {
  id        String   @id @default(cuid())
  amount    Decimal  @db.Decimal(10, 2)
  auctionId String
  bidderId  String
  createdAt DateTime @default(now())
  auction   Auction  @relation(fields: [auctionId], references: [id], onDelete: Cascade)
  bidder    User     @relation(fields: [bidderId], references: [id], onDelete: Cascade)

  @@unique([auctionId, bidderId])
  @@index([bidderId])
  @@index([bidderId, auctionId])
  @@map("bids")
}

